<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol>104</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <control type="image">
            <texture>https://kodi-unlimited-support.de/wizard/data/infobackground.jpg</texture>
        </control>
        <control type="group">
            <control type="group">
                <width>100%</width>
                <height>80</height>
                <control type="image">
                    <texture>Button/testbuttonfo.png</texture>
                    <colordiffuse>$INFO[Window().Property(texture.color1)]</colordiffuse>
                </control>
                <control type="label" id="101">
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>[COLOR $INFO[Window().Property(texture.color2)]]$INFO[Window().Property(message.title)]: $INFO[Window().Property(message.logfile)][/COLOR]</label>
                </control>
            </control>
            <control type="grouplist" id="104">
                <onright>103</onright>
                <top>96</top>
                <left>16</left>
                <width>240</width>
                <height>952</height>
                <itemgap>16</itemgap>
                <defaultcontrol>201</defaultcontrol>
                <control type="button" id="201">
                    <align>center</align>
                    <height>80</height>
                    <textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
                    <texturefocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturefocus>
					<texturenofocus>Button/testbuttonnf.png</texturenofocus>
                    <label>Upload Log</label>
                </control>
                <control type="button" id="202">
                    <align>center</align>
                    <height>80</height>
                    <textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
                    <texturefocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturefocus>
					<texturenofocus>Button/testbuttonnf.png</texturenofocus>
                    <label>Kodi Log</label>
                    <visible>String.IsEqual(Window().Property(message.buttons), true)</visible>
                </control>
                <control type="button" id="203">
                    <align>center</align>
                    <height>80</height>
                    <textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
                    <texturefocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturefocus>
					<texturenofocus>Button/testbuttonnf.png</texturenofocus>
                    <label>Old Log</label>
                    <visible>String.IsEqual(Window().Property(message.buttons), true)</visible>
                </control>
                <control type="button" id="204">
                    <align>center</align>
                    <height>80</height>
                    <textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
                    <texturefocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturefocus>
					<texturenofocus>Button/testbuttonnf.png</texturenofocus>
                    <label>Wizard Log</label>
                    <visible>String.IsEqual(Window().Property(message.buttons), true)</visible>
                </control>
                <control type="button" id="205">
                    <align>center</align>
                    <height>80</height>
                    <textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
                    <texturefocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturefocus>
					<texturenofocus>Button/testbuttonnf.png</texturenofocus>
                    <label>Schliessen</label>
                </control>
            </control>
            <control type="textbox" id="102">
                <left>272</left>
                <top>96</top>
                <width>1600</width>
                <height>952</height>
                <pagecontrol>103</pagecontrol>
                <autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(103)</autoscroll>
                <label>[COLOR white]$INFO[Window().Property(message.logmsg)][/COLOR]</label>
            </control>
            <control type="scrollbar" id="103">
                <right>30</right>
                <top>96</top>
                <width>10</width>
                <height>952</height>
                <onleft>104</onleft>
                <onup>102</onup>
                <ondown>102</ondown>
                <texturesliderbarfocus colordiffuse="deepskyblue">Button/testbuttonfo.png</texturesliderbarfocus>
                <subtype>text</subtype>
            </control>
        </control>
    </controls>
</window>